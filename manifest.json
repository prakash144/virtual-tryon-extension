{
  "manifest_version": 3,
  "name": "Myntra Virtual Try-On (Gemini)",
  "version": "1.0.0",
  "description": "Replace Myntra models with your own photo using Gemini Flash.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.myntra.com/*",
    "https://assets.myntassets.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": { "default_title": "Myntra Try-On", "default_popup": "popup.html" },
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["https://*.myntra.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
